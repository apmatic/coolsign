<odoo>
	<data>

		<record id="view_employee_form" model="ir.ui.view">
			<field name="name">view.employee.form.inherit.hr.coolsign</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="Coolsign" name="coolsign" groups="hr.group_hr_user">
						<group>
							<field name="enable_coolsign_app" />
							<field name="coolsign_app_id" />
						</group>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
